    ViewData["Title"] = "Welcome";
}
<div class="container">
    <div class="row">
        <div class="col-sm">
            <section class="grid-container">
                <div class="cols grid-area">

                    <div class="col grid-2">
                        <img src="~/images/mas-2.jpg" alt="">
                    </div>
                    <div class="col grid-3">
                        <img src="~/images/mas-3.jpg" alt="">
                    </div>
                    <div class="col grid-4">
                        <img src="~/images/mas-4.jpg" alt="">
                    </div>
                    <div class="col grid-1">
                        <img src="~/images/mas-1.jpg" alt="">
                    </div>
                </div>
            </section>
        </div>
        <div class="col-5">
            <div class="text-center">
                <h1 class="display-4"><a name="howitworks"> How It Works</a></h1>

                <p>In 3 simple steps, you'll be on your way to being able to track your plants needs. </p>


                <h1><span class="circle">1</span></h1>
                <p>Use our one-click registration that only requires a valid email address.</p>


                <h1><span class="circle">2</span></h1>
                <p>You will be redirected to your dashboard where you will add a new plant based on plant's we have available in our database</p>


                <h1><span class="circle">3</span></h1>
                <p>Mark your plants as fertilized or watered! It's that simple!
                    <button type="button" onclick="location.href='account/login'" class="btn btn-primary">Sign Me Up!</button></p>

            </div>
        </div>
